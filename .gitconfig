[user]
  name = Greg Jopa
  email = 534034+gregjopa@users.noreply.github.com

[github]
  user = gregjopa

[alias]
  st = status -sb
  ci = commit
  co = checkout
  br = branch
  lg = log -p

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = current

[pull]
  rebase = true

[fetch]
  prune = true

[rerere]
  enabled = true

[core]
  autocrlf = input
  editor = code --wait
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix

[credential]
  helper = osxkeychain
